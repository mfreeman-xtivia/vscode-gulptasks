{
	"name": "gulptasks",
	"displayName": "Gulp Tasks",
	"description": "A gulp task visualization and execution extension for Visual Studio Code",
	"version": "1.0.0",
	"author": {
		"name": "Nick Dodd"
	},
	"publisher": "nickdodd79",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nickdodd79/vscode-gulptasks"
	},
	"engines": {
		"vscode": "^1.22.0"
	},
	"icon": "resources/gulp-logo.png",
	"categories": [
		"Other"
	],
	"main": "./out/extension",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"title": "Gulp Tasks configuration",
			"properties": {
				"gulptasks.pattern": {
					"type": "string",
					"default": "**/gulpfile*.js",
					"description": "A glob pattern for gulp file matching."
				},
				"gulptasks.runInTerminal": {
					"type": "boolean",
					"default": true,
					"description": "Whether to run gulp tasks in a terminal window."
				},
				"gulptasks.filters": {
					"type": "array",
					"default": [
						"!node_modules/**",
						"!bower_components/**"
					],
					"description": "An array of globs used to include and exclude workspace paths."
				}
			}
		},
		"views": {
			"explorer": [
				{
					"id": "gulptasks:explorer",
					"name": "Gulp Tasks",
					"when": "gulptasks:enabled"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "gulptasks:execute",
					"when": "view == gulptasks:explorer && gulptasks:canExecute",
					"group": "navigation@1"
        },
				{
					"command": "gulptasks:terminate",
					"when": "view == gulptasks:explorer && gulptasks:canTerminate",
					"group": "navigation@2"
				},
				{
					"command": "gulptasks:restart",
					"when": "view == gulptasks:explorer && gulptasks:canRestart",
					"group": "navigation@3"
				},
				{
					"command": "gulptasks:refresh",
					"when": "view == gulptasks:explorer",
          "group": "navigation@4"
				}
			]
		},
		"commands": [
			{
				"command": "gulptasks:execute",
				"title": "Execute Task",
				"icon": {
					"light": "resources/light/execute.svg",
					"dark": "resources/dark/execute.svg"
				}
      },
			{
				"command": "gulptasks:terminate",
				"title": "Terminate Task",
				"icon": {
					"light": "resources/light/terminate.svg",
					"dark": "resources/dark/terminate.svg"
				}
			},
			{
				"command": "gulptasks:restart",
				"title": "Restart Task",
				"icon": {
					"light": "resources/light/restart.svg",
					"dark": "resources/dark/restart.svg"
				}
			},
			{
				"command": "gulptasks:refresh",
				"title": "Refresh Tasks",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"minimatch": "^3.0.4"
	},
	"devDependencies": {
		"@types/minimatch": "^3.0.3",
		"@types/node": "^9.6.0",
		"typescript": "^2.8.0",
		"vscode": "^1.1.0"
	}
}
